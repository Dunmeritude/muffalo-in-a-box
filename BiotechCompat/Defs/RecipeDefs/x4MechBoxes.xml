  <!-- small flatpack -->
  <RecipeDef>
    <defName>StasisBox_CreateSmallFlatpackBulk</defName>
    <label>make light flatpack packages x4</label>
    <description>Craft 4 ght flatpack packages at once.</description>
    <jobString>Crafting 4 ght flatpack packages.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
    </ingredients>
    <products>
      <StasisBox_EmptyMechLight>4</StasisBox_EmptyMechLight>
    </products>
    <workSkill>Crafting</workSkill>
    <displayPriority>110</displayPriority>
  </RecipeDef>

