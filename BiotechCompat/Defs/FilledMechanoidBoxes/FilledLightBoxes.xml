<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <ThingDef ParentName="FilledMechanoidCategory" Name="FilledLightMechCategory" Abstract="true">
      <description>A de-activated and flat-packed light mechanoid ready for easy storage or trade across the planet. A good way to spare your mechinator's bandwidth without dismantling your mechanoids, or leaving them sitting around cluttering up the place.</description>
      <graphicData>
          <texPath>StasisBox/MechanoidBoxes/LightMechanoidBoxes/Filled</texPath>
          <graphicClass>Graphic_StackCount</graphicClass>
          <drawSize>(1.5,1.5)</drawSize>
      </graphicData>
    </ThingDef>

    <ThingDef ParentName="FilledLightMechCategory">
        <defName>StasisBox_Militor</defName>
        <label>light stasis box (militor)</label>
        <statBases>
            <MarketValue>800</MarketValue>
        </statBases>
        <comps>
            <li Class="StasisBox.CompProperties_BoxPawns">
                <emptyBox>StasisBox_EmptyMechLight</emptyBox>
                <openable>true</openable>
                <pawnKindToSpawnWhenOpened>Mech_Militor</pawnKindToSpawnWhenOpened>
                <genderOfPawn>None</genderOfPawn>
            </li>
        </comps>
    </ThingDef>
    

