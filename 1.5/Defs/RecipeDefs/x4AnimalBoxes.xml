  <!-- small animal -->
  <RecipeDef>
    <defName>StasisBox_CreateSmallAnimalBulk</defName>
    <label>make small stasis box x4</label>
    <description>Craft 4 small stasis boxes at once.</description>
    <jobString>Crafting 4 small stasis boxes.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Kibble</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
    </ingredients>
    <products>
      <StasisBox_EmptyAnimalSmall>4</StasisBox_EmptyAnimalSmall>
    </products>
    <workSkill>Crafting</workSkill>
    <displayPriority>110</displayPriority>
  </RecipeDef>

